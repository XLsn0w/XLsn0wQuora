
platform :ios, '9.0' # Uncomment the next line to define a global platform for your project

use_frameworks! #由于是Swift(objc不需要), 我们这里还需要换行输入use_frameworks!  这样才能将对应的库导入到我们的工程中。
# Comment the next line if you're not using Swift and don't want to use dynamic frameworks

target "XLsn0wQuora" do
    
    pod 'XLsn0wKit_swift'
    pod 'XLsn0wKit_objc'
    
    pod 'SnapKit'    #纯代码布局库 Swift版本的AutoLayout 类似于OC 下的Masonry
    pod 'Kingfisher' #图片缓存库 Swift 版本AFNetworking
    pod 'Alamofire'  #网络解析库
    
    pod 'SQLite.swift'
    
	pod 'SwiftyJSON'
    pod 'HandyJSON'
    
    pod 'Moya'
    pod 'Moya/RxSwift'
    
    pod 'RxSwift'
    pod 'RxCocoa'
    pod 'RxDataSources'
    
    pod 'SwiftDate'
    pod 'Then'
    pod 'QorumLogs' #带颜色的log输出 Swift 3.0
    
    #objc Kit
    pod 'FMDB'
    pod 'SVProgressHUD' #目前只有OC 版本
    pod 'SDWebImage' #SDWebImage
    pod 'MJRefresh' #MJRefresh
    
end
